<div id="left-nav">
  <ul>
    <% left_navigation_items.each do |nav| %>
      <li>
        <% if nav == currently_selected_left_nav_item %>
          <%= link_to(nav[:link_text], nav[:url_options], :class => 'current') %>
        <% else %>
          <%= link_to(nav[:link_text], nav[:url_options]) %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
